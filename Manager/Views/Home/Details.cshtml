@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/softwareengineer.jpeg" />
                <img class="card-img-top" src="~/images/lowintent.png" />
                <h4>Employee ID:@Model.Employee.Id</h4>
                <h4> Email:@Model.Employee.Email</h4>
                <h4> Department:@Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
























