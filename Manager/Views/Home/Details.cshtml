@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
    var imagepath = "~/images/" + (string.IsNullOrEmpty(Model.Employee.ImagePath) ? "team.jpg" : Model.Employee.ImagePath);
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top ImageSize" src="@imagepath" asp-append-version="true" />
                <h4> Id:@Model.Employee.Id</h4>
                <h4>Age:@Model.Employee.Age</h4>
                <h4> Department:@Model.Employee.Department</h4>
                <h4> Phone:@Model.Employee.PhoneNumber</h4>
                <h4> Email:@Model.Employee.Email</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.Id" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
























