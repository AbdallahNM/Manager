@model Employee 
@{
    ViewBag.Title = "Create Employee";
}
<form asp-controller="Home" asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Nmae</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
