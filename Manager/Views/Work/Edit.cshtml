@model EmployeeEditViewModel
@{
    ViewBag.Title = "Edit Employee";
    var imagepath = "~/images/" + (string.IsNullOrEmpty(Model?.ExistingImagePath) ? "team.jpg" : Model?.ExistingImagePath);
}
<form asp-controller="Work" asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingImagePath" />
    <div class="form-group row m-1">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-1">
        <label asp-for="Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Age" class="form-control" placeholder="Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-1">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-1">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-1">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="" Plaese Select></option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-1">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input" />
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@imagepath" asp-append-version="true" />
    </div>

    <div class="form-group row m-1">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-dark btn-sm">Update</button>
            <a asp-controller="Home" asp-action="Index" asp-route-id="@emp.Id" class="btn btn-outline-dark btn-sm">Cancel</a>
        </div>
    </div>
</form>
